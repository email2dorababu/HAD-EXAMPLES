sudo apt-get install openssh-server openssh-client

ssh-keygen -t dsa -P '' -f ~/.ssh/id_dsa
cat ~/.ssh/id_dsa.pub >> ~/.ssh/authorized_keys

here -P is capital P.

ssh localhost

always use sudo 


